---
import { changeLanguage } from "i18next";
import Layout from "@/layouts/Layout.astro";
import Badge from "@/components/Badge.astro";
import AboutMe from "@/components/AboutMe.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Experience from "@/components/Experience.astro";
import Projects from "@/components/Projects.astro";
import Me from "@/components/Me.astro";
import LinkedInIcon from "@/icons/LinkedIn.astro";
import GitHubIcon from "@/icons/Github.astro";
import BriefcaseIcon from "@/icons/Briefcase.astro";
import MailIcon from "@/icons/Mail.astro";
import SocialPill from "@/icons/SocialPill.astro";
import CodeIcon from "@/icons/Code.astro";
import ProfileCheck from "@/icons/ProfileCheck.astro";

changeLanguage("en");
---

<Layout 
	title="PortFolgio Pedro - Software Developer & Software Engineer"
	description="Contrata a Pedro para desarrollar, implementar y/o mejorar tu software"
>
	<main class="px-4">
		<SectionContainer class="py-16 md:py-32">
			<Me>
				</slot>
			</Me>
		</SectionContainer>

		<div class="space-y-24">
			<SectionContainer id="experiencia">
				<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
					<BriefcaseIcon class="size-8" />
					Experiencia laboral
			  	</h2>
			  	<Experience />
			</SectionContainer>
		
			<SectionContainer id="proyectos">
			  	<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white">
					<CodeIcon class="size-8" />
					Proyectos
			  	</h2>
			  	<Projects />
			</SectionContainer>
		
			<SectionContainer id="sobre-mi">
			  	<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white">
					<ProfileCheck class="size-8" />
					Sobre m√≠
			  	</h2>
			  	<AboutMe />
			</SectionContainer>
		</div>

	</main>
</Layout>

