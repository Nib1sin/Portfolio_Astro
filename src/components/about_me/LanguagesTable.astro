---
import LanguagesTableItem from "@/components/about_me/LanguagesTableItem.astro";
import { getLocaleFromPathname, t } from "@/i18n/i18n";

const locale = getLocaleFromPathname(Astro.url.pathname);

const LANGUAGES = [
  {
    language: t(locale, "LanguagesTable.language_es"),
    listening: t(locale, "LanguagesTable.language_lvl"),
    speaking: t(locale, "LanguagesTable.language_lvl"),
    writing: t(locale, "LanguagesTable.language_lvl"),
  },
  {
    language: t(locale, "LanguagesTable.language_en"),
    listening: "C2",
    speaking: "C2",
    writing: "C1",
  },
  {
    language: t(locale, "LanguagesTable.language_it"),
    listening: "C1",
    speaking: "C1",
    writing: "C1",
  },
  {
    language: t(locale, "LanguagesTable.language_de"),
    listening: "A2",
    speaking: "A2",
    writing: "A2",
  },
];
---

<div
  class="relative overflow-x-auto shadow-md sm:rounded-lg hover:table-fixed border-separate pt-10"
>
  <table
    class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
  >
    <caption
      class="p-5 text-lg font-semibold text-left rtl:text-right text-gray-900 bg-white dark:text-white dark:bg-gray-800"
    >
      <div class="flex items-center justify-between">
        <span>
          {t(locale, "LanguagesTable.language_table")}
        </span>
        <button
          id="toggle-table-btn"
          class="right-7 relative px-4 py-2 text-sm font-medium text-white bg-white/30 dark:bg-gray-800/30 rounded-lg border-2 border-gray-500 hover:bg-gray-700 hover:border-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500"
        >
          <span
            class="absolute inset-0 rounded-lg border-2 bg-white/30 dark:bg-gray-800/30 animate-ping"
          ></span>
          <span class="text-show hidden">
            {t(locale, "LanguagesTable.language_table_show")}
          </span>
          <span class="text-hide hidden">
            {t(locale, "LanguagesTable.language_table_hide")}
          </span>
          <span class="relative">
            {t(locale, "LanguagesTable.language_table_show")}
          </span>
        </button>
      </div>
    </caption>
    <thead
      id="table-header"
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
      style="display: none;"
    >
      <tr>
        <th scope="col" class="px-6 py-3">
          {t(locale, "LanguagesTable.language_language")}
        </th>
        <th scope="col" class="px-6 py-3">
          {t(locale, "LanguagesTable.language_listening")}
        </th>
        <th scope="col" class="px-6 py-3">
          {t(locale, "LanguagesTable.language_speaking")}
        </th>
        <th scope="col" class="px-6 py-3">
          {t(locale, "LanguagesTable.language_writing")}
        </th>
      </tr>
    </thead>
    <tbody id="table-body" style="display: none;">
      <!-- Ocultar por defecto -->
      {
        LANGUAGES.map((languages) => (
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <LanguagesTableItem {...languages} />
          </tr>
        ))
      }
    </tbody>
  </table>
</div>

<script is:inline>
  document.addEventListener("astro:page-load", () => {
    const toggleButton = document.getElementById("toggle-table-btn");
    const tableHeader = document.getElementById("table-header");
    const tableBody = document.getElementById("table-body");
    const textHide = toggleButton.querySelector(".text-hide");
    const textShow = toggleButton.querySelector(".text-show");
    let isTableVisible = false;

    toggleButton.addEventListener("click", () => {
      isTableVisible = !isTableVisible;

      if (isTableVisible) {
        tableHeader.style.display = "table-header-group";
        tableBody.style.display = "table-row-group";
        toggleButton.querySelector(".relative").textContent =
          textHide.textContent;
      } else {
        tableHeader.style.display = "none";
        tableBody.style.display = "none";
        toggleButton.querySelector(".relative").textContent =
          textShow.textContent;
      }
    });
  });
</script>
