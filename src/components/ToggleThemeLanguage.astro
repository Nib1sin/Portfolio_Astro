---
import ToggleThemeLanguageClient from "@/components/ToggleThemeLanguageClient";
import { getLocaleFromPathname, t } from "@/i18n/i18n";

const locale = getLocaleFromPathname(Astro.url.pathname);
---

<ToggleThemeLanguageClient
  client:load
  locale={locale}
  locales={["es", "en", "it", "pr"]}
  defaultLocale="es"
  prefixDefaultLocale={false}
  chooseThemeLabel={t(locale, "footer.choose_theme")}
/>
