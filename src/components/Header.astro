---
import HeaderClient from "@/components/HeaderClient.tsx";
import { getLocaleFromPathname, t } from "@/i18n/i18n";

const locale = getLocaleFromPathname(Astro.url.pathname);
const navItems = [
  {
    title: t(locale, "header.element_4_tittle"),
    label: "contacto",
    url: "#contacto",
  },
  {
    title: t(locale, "header.element_1_tittle"),
    label: "experiencia",
    url: "#experiencia",
  },
  {
    title: t(locale, "header.element_2_tittle"),
    label: "proyectos",
    url: "#proyectos",
  },
  {
    title: t(locale, "header.element_3_tittle"),
    label: "sobre-mi",
    url: "#sobre-mi",
  },
  {
    title: t(locale, "header.element_5_tittle"),
    label: "skills",
    url: "#skills",
  },
];
---

<HeaderClient
  client:load
  navItems={navItems}
  locale={locale}
  locales={["es", "en", "it"]}
  defaultLocale="es"
/>
