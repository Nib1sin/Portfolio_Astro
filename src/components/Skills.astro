<section id='skill' class='w-full mx-auto container lg:max-w-4xl md:max-w-2xl'>
    <ul class='my-10 flex grid-cols-6 flex-wrap justify-center gap-4 sm:grid'>
        {STACK.map((skill) => (
            <li id={skill.name}
                class={`dark:bg-transparent flex flex-col items-center gap-2 transition-all duration-100 ease-out hover:scale-125 ${skill.className} `}
            >
                <skill.iconItem_ class={`dark:bg-transparent dark:fill-current text-white flex flex-col items-center gap-2 transition-all duration-100 w-16 h-16 ${skill.className} [&>svg]:fill-white`}/>
                    <span class='text-l text-primary-300'>{skill.name}</span>
            </li>
        ))}
    </ul>
</section>
